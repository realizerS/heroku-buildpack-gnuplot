#!/bin/sh

indent() {
  sed -u 's/^/       /'
}

echo "-----> Install ffmpeg"
BUILD_DIR=$1
VENDOR_DIR="/app/vendor"

DOWNLOAD_GIT_URL="https://github.com/realizerS/heroku-buildpack-gnuplot-targz.git"

echo "DOWNLOAD_GIT_URL = " $DOWNLOAD_GIT_URL | indent

cd $BUILD_DIR
mkdir -p $VENDOR_DIR
cd $VENDOR_DIR
git clone $DOWNLOAD_GIT_URL gunplot
cd gnuplot
tar xzf gnuplot-5.0.3-bin.tar.gz


echo "done" |indent

